{
  "name": "mm-maze-viewer",
  "displayName": "mm_maze_viewer",
  "description": "",
  "publisher": "Naophis",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage: maze",
    "onCommand: extention.gererateImage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "maze",
        "extensions": [
          ".maze"
        ],
        "aliases": [
          "Maze"
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.generateImage",
        "title": "Maze Preview"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MicroMouse Maze Viewer Configuration",
      "properties": {
        "mazeViewer.wallDirectionType": {
          "type": "string",
          "default": "N-E-W-S",
          "enum": [
            "N-E-W-S",
            "N-E-S-W"
          ],
          "enumDescriptions": [
            "N-E-W-S (N=1, E=2, W=4, S=8)",
            "N-E-S-W (N=1, E=2, S=4, W=8)"
          ],
          "description": "方角と数値の対応"
        },
        "mazeViewer.arrayType": {
          "type": "string",
          "default": "1D",
          "enum": [
            "1D[index]",
            "2D[x][y]",
            "2D[y][x]"
          ],
          "enumDescriptions": [
            "[index]: (x=idx%gridSize, y=idx/gridSize)で表現",
            "[x][y]で表現"
          ],
          "description": "迷路情報の格納配列"
        },
        "mazeViewer.arrayOrder": {
          "type": "string",
          "default": "a->b",
          "enum": [
            "a->b",
            "b->a"
          ],
          "enumDescriptions": [
            "[a][b]でaからインクリメント",
            "[a][b]でbからインクリメント"
          ],
          "description": "配列の順序（[a][b]に対し、[a]からインクリメント or [b]からインクリメント）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {}
}